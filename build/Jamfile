import ../../config/checks/config : requires ;

constant c11-requires :
    [ requires
    cxx11_constexpr
    cxx11_decltype
    cxx11_hdr_tuple
    cxx11_template_aliases
    cxx11_variadic_templates
    ]
    ;

path-constant HTTP_ROOT : .. ;

project boost/http
    : requirements
      $(c11-requires)
      <link>shared:<define>BOOST_HTTP_DYN_LINK=1
      <link>static:<define>BOOST_HTTP_STATIC_LINK=1
    : usage-requirements
      <link>shared:<define>BOOST_HTTP_DYN_LINK=1
      <link>static:<define>BOOST_HTTP_STATIC_LINK=1
    : source-location $(HTTP_ROOT)
    ;

alias http_sources : [ glob-tree-ex ./src : *.cpp ] ;

explicit http_sources ;

lib boost_http
   : http_sources
   : requirements
     <library>/boost//buffers
     <library>/boost//capy
     <library>/boost/json//boost_json/<warnings-as-errors>off
     <library>/boost//url
     <include>../
     <define>BOOST_HTTP_SOURCE
   : usage-requirements
     <library>/boost//buffers
     <library>/boost//capy
     <library>/boost/json//boost_json/<warnings-as-errors>off
     <library>/boost//url
   ;

boost-install boost_http ;
